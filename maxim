arr = [2, 5, 1, 8, 2, 9, 1]

k = 3
left = 0
right = k - 1

current_sum = arr[left] + arr[left+1] + arr[right]
max_sum = current_sum

while right < len(arr) - 1:
    current_sum -= arr[left]
    current_sum += arr[right + 1]
    left += 1
    right += 1
    if current_sum > max_sum:
        max_sum = current_sum

print(max_sum)
